#history .history__reactions
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	pointer-events none
	.reaction__item
		display block
		position absolute
		margin 0
		padding 0
		line-height 1
		text-align center
		opacity 0
		&.is-float1
			animation float1 2s ease-in forwards
		&.is-float2
			animation float1 3s ease-in forwards
		&.is-float3
			animation float1 4s ease-in forwards


@keyframes float1
	0%
		opacity 0
		transform translate(0, 0)
	33%
		opacity 0.5
	67%
		opacity 0.5
	100%
		opacity 0
		transform translate(0, -30rem)