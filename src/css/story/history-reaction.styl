#history .history__reaction
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	overflow hidden
	pointer-events none
	.tomato
		position absolute
		width 5rem
		height 5rem
		background red
		top 100%
		left 0
		border-radius 50%
		transition all 300ms ease-in
		&.is-thrown
			transform scale(0.33)
			border-radius 0%