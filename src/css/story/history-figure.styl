#history .history__figure
	overflow hidden
	position relative
	max-width 80rem
	margin 0 auto

	.figure__boys
		display flex
		flex-wrap wrap
		justify-content center
		position absolute
		left 0
		top $info-h-mobile
		width 100%
		transition left .75s cubic-bezier(.25, .1, .25, 1)
		transform translate3d(0, 0, 0)
		+mq('bp-5')
			top $info-h-desktop

	.boy
		//visibility hidden
		display flex
		flex-direction column
		align-items flex-start
		transform translateX(50%)
		opacity 0
		transition transform 0.75s cubic-bezier(.25, .1, .25, 1), opacity 0.75s cubic-bezier(.25, .1, .25, 1)
		&:nth-of-type(n+5)
			@media only screen and (max-width: 799px)
				transform translateY(-82.5%)
			@media only screen and (max-width: 599px)
				transform translateY(-75%)
			@media only screen and (max-width: 399px)
				transform translateY(-50%)
		// Transition first few in from left
		&:nth-of-type(-n+3)
			transform translateX(-50%)
			opacity 0
			transition transform 0.75s cubic-bezier(.25, .1, .25, 1), opacity 0.75s cubic-bezier(.25, .1, .25, 1)

		&.is-visible
			//visibility visible
			transform translateX(0px)
			opacity 1
			transition transform 0.75s cubic-bezier(.25, .1, .25, 1), opacity 0.75s cubic-bezier(.25, .1, .25, 1)

		&__name
			order 1
			margin 0
			width 100%
			text-align center
			set-type-size(x-small, false)
			line-height 1
			padding 0 0.5rem
			height 3rem
			min-height 3rem
			max-height 3rem
			font-weight 500
			+mq('bp-3')
				set-type-size(small, false)
		svg
			display block
			order 0
			// flex 1 0 auto

	.figure__info
		position absolute
		top 0
		height $info-h-mobile
		left 1rem
		+mq('bp-5')
			left 4rem
			height $info-h-desktop

	.info__year
		margin 0
		line-height 1
		font-weight 800
		font-size 7rem
		color $white
		opacity 0.5
		+mq('bp-5')
			font-size 12rem
			position absolute
			top 0
			left 0

	.info__band
		position relative
		font-size 1.5rem
		margin 0
		line-height 1
		font-weight 800
		text-shadow 0 0 3px $white
		+mq('bp-5')
			font-size 2.25rem
			margin-top 1.75rem
		a
			display none
			position absolute
			top 0
			left 0
			transform translate(-150%, 12.5%)
			text-decoration none
			border none
			line-height 1
			+mq('bp-5')
				display block
			&:hover
				svg
					stroke-opacity 1
				polygon
					fill-opacity 1
		svg
			width 2rem
			height 2rem
			stroke $white
			stroke-opacity 0.5
			polygon
				fill $white
				fill-opacity 0.5
				stroke none

	.info__song
		position relative
		font-size 1.25rem
		margin 0
		line-height 1
		font-weight 500
		text-shadow 0 0 3px $white
		+mq('bp-5')
			font-size 1.75rem

	.info__position
		position relative
		// bottom 0rem
		// left 0
		width 5rem
		font-size 0.9rem
		line-height 1
		color $tertiary
		text-transform uppercase
		font-weight 700
		margin 0
		margin-top 0.25rem
		letter-spacing 0.05em
		text-shadow 0 0 3px $white
