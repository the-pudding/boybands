#history .history__drawer
	position absolute
	top 0
	right 0
	width 100%
	pointer-events none
	overflow hidden
	// display none
	+mq('bp-4')
		display block
	.drawer__menu
		transform translate3d(0, 0, 0)
		position absolute
		top 0
		right 0
		z-index set-index('overlay') - 1
		background-color $fg
		color $bg
		transform translateX(100%)
		height 100%
		width 100%
		max-width 12rem
		transition transform 200ms ease-in-out
		overflow-y scroll
		pointer-events auto
		+mq('bp-3')
			border-right 1px solid lighten($tertiary, 30)
		&.is-visible
			transform translateX(0)
			z-index set-index('overlay') + 1

		li
			text-align right
			set-type-size(root, false)
			line-height 1
			padding 0.5em 1em
			background-color lighten($tertiary, 3)
			cursor pointer
			color $white
			&:hover
				background-color $secondary
			&:nth-child(even)
				background-color $tertiary
				&:hover
					background-color $secondary
			
					
	.drawer__tab
		margin 0
		position absolute
		bottom 4rem
		right -0.75em
		border 2px solid $white
		width auto
		padding 0.5em 1em
		border-radius 10px
		background-color $tertiary
		color $white
		cursor pointer
		pointer-events auto
		opacity 1
		line-height 1
		font-weight 600
		text-transform uppercase
		set-type-size(xx-small, false)
		letter-spacing 0.05em
		transition opacity 250ms ease-in-out
		
		+mq('bp-5')
			set-type-size(small, false)
			right -0.5em
			bottom 2rem
		&:hover
			background-color $secondary
		&.is-hidden
			opacity 0
			pointer-events none