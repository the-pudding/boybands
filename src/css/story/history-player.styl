#history .history__player
	position fixed
	bottom 0
	left 0
	width 100%
	.player__control
		display flex
		flex-direction row
		align-items center
		justify-content space-between
		color $tertiary
		padding 0 1rem
		margin 0.5rem auto
		max-width 30rem

	p
		margin 0
	
	p.control__queue
		font-weight 700
		text-align center
		font-size 16px
		line-height 1
		margin 0
		width 6rem
		+mq('bp-4')
			font-size 20px
			margin 0
			width 5.5rem
		
	button
		margin 0 1rem
		background-color $tertiary
		line-height 1
		border-radius 50%
		padding 0.5rem
		box-shadow 3px 3px 6px rgba($off-black, 0.25)
		border 2px solid $white
		transition background-color 100ms ease-in-out, opacity 250ms ease-in-out
		+mq('bp-4')
			padding 1em
		&:hover
			background-color $secondary
		&:active
			box-shadow 3px 3px 6px rgba($primary, 0)
			+mq('bp-4')
				transform translate(1.5px, 1.5px)
		&:disabled
			opacity 0.5
			cursor not-allowed
		
		span
			display none
			&.is-visible
				display block

		svg
			width 1rem
			height 1rem
			+mq('bp-4')
				width 1.75rem
				height 1.75rem
			path, line
				stroke $white
				fill none
			polygon, rect
				stroke none
				fill $white

	button.control--volume
		background transparent
		border none
		box-shadow none
		width 6rem
		margin 0
		+mq('bp-4')
			width 5.5rem

		svg
			path, line
				stroke $teriary
				fill none
			polygon, rect
				stroke none
				fill $teriary

	button.control--toggle
		margin 0
		padding 0.75rem
		svg
			width 1rem
			height 1rem
	
	.player__progress
		width 100%
		background-image linear-gradient(to right, $yellow, $pink 82.5%)
		position relative
		height 0.5rem

		.progress__bar
			position absolute
			top 0
			right 0
			height 100%
			width 100%
			background-color $bg
			transition width 251ms linear
	
	.player__loading
		position absolute
		top 0
		left 0
		width 100%
		text-align center
		pointer-events none
		margin 0
		text-transform uppercase
		letter-spacing 0.05em
		font-weight 700
		line-height 1
		set-type-size(xx-small, false)
		color $tertiary
		transform translateY(-1rem)
		opacity 0.0
		transition opacity 1s 250ms ease-in-out
		&.is-visible
			opacity 0.75
		+mq('bp-5')
			set-type-size(small, false)
				