.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	&__title
		text-align center
		svg
			width 100%
	&__hed
		max-width 35rem
		margin 0 auto
		font-weight 800
		text-align center
		text-transform uppercase
		set-type-size('xxx-large', true)
		+mq('bp-3')
			set-type-size('xxxx-large', true)
		+mq('bp-5')
			font-size 96px
			line-height 1
		span
			display inline-block
			background-image linear-gradient(to top, $yellow, $pink 67%)
			color transparent
			background-clip text
	
	&__byline
		max-width $column-width
		margin 0.75rem
		set-type-size('small', true)
		font-weight 700
		position absolute
		// top 3rem
		// width 8rem
		// text-align right
		top 0
		text-align left
		left 0
		z-index 1000
		
	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('large', true)