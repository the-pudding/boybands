<section id='history'>
	<h2 class='history__title'>{{doc.titleLong}}</h2>
	<div class='history__rating'>
		<p class='rating__tip'>{{doc.ratingTip}}</p>
		<div class='rating__buttons'>
			<button class='rating__love' data-value='love'>ğŸ˜ <span></span></button>
			<button class='rating__hate' data-value='hate'>ğŸ˜¡ <span></span></button>
		</div>
		
	</div>
	
	
	<figure class='history__figure'>
		<div class='figure__info'>
			<p class='info__year'><span></span></p>
			<p class='info__band'><a href='' target='_blank' class='band__youtube'>@@include('youtube.svg')</a><span></span></p>
			<p class='info__song'><span></span></p>
			<p class='info__position'>Peak: #<span></span></p>
		</div>
		<div class='figure__boys'>

		</div>
	</figure>
	<div class='history__player'>
		<div class='player__control'>
			<p class='control__queue'>
				<span class='queue__current'>1</span> of <span class='queue__total'>55</span>
			</p>
			<button class='control--back' data-control='back'>@@include('skip-back.svg')</button>
			<button class='control--toggle' data-control='toggle'><span data-state='play'>@@include('play.svg')</span><span class='is-visible' data-state='pause'>@@include('pause.svg')</span></button>
			<button class='control--forward' data-control='forward'>@@include('skip-forward.svg')</button>
			<button class='control--volume' data-control='volume'><span class='is-visible' data-state='on'>@@include('volume-2.svg')</span><span data-state='off'>@@include('volume-x.svg')</span></button>
		</div>
		<div class='player__progress'>
			<div class='progress__bar'></div>
		</div>
	</div>
	
	<a class='tweet' href='' data-value='tweet'>@@include('twitter.svg')</a>

	<div class='history__reactions'></div>
	<div class='history__drawer'>
		<div class='drawer__menu'>
			<ul class='drawer__bands'></ul>
		</div>
		<button class='drawer__tab'>{{doc.drawerTab}}</button>
	</div>
</section>
