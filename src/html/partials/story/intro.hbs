
<div class='intro'>
	<p class='intro__byline'>By
		<a href='{{meta.author.url}}' target='_blank'>{{meta.author.name}}
		</a><br><a href='{{meta.author2.url}}' target='_blank'>{{meta.author2.name}}
		</a><br><a href='{{meta.author3.url}}' target='_blank'>{{meta.author3.name}}
		</a>
	</p>
	<div class='intro__title' alt='{{doc.title}}'>@@include('title.svg')</div>
	{{!-- <p class='intro__dek'>{{doc.description}}</p> --}}
	<p class='intro__prelude'>{{{doc.prelude}}}</p>
	<div class='intro__choice'>
		
		<p class='choice__loading'>Loading Bands...</p>
		<button class='choice__history tk-dosis' data-value='history'>
			{{{doc.button}}} @@include('volume-2.svg')
		</button>
	</div>
	<p class='intro__note'><sup>*</sup>{{{doc.note}}}</p>
</div>